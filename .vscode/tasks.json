{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "dotnet",
	"isShellCommand": true,
	"args": [],
	"tasks": [
		{
			"taskName": "build",
			"args": [
                "${workspaceRoot}\\project.json"
            ],
			"isBuildCommand": true,
			"problemMatcher": "$msCompile",
			"echoCommand": true
		},
		{
            "taskName": "publish",
            "args": [
                "--configuration",
                "Release",
                "${workspaceRoot}\\project.json"
            ],
            "isBuildCommand": false,
            "showOutput": "always",
            "echoCommand": true
        }
	]
}