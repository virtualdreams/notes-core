@using notes.Helper;

@{
	Layout = "_LayoutMinimal";
	ViewBag.Title = "Login - ";
}

<div class="row justify-content-center">
	<div class="col-md-4">
		<div class="mt-5 card">
			<div class="card-header">
				Please Sign In
			</div>
			<div class="card-body">

				@if(Html.HasError("error")) {
					<div class="alert alert-danger">
						@Html.ErrorMessage("error")
					</div>
				}

				<form action="@Url.RouteUrl("login", new { ReturnUrl = Context.Request.Query["ReturnUrl"] })" method="post" enctype="multipart/form-data" id="login-form">
					<div class="form-group">
						<label for="username">E-mail address</label>
						<input class="form-control" placeholder="E-mail" name="username" id="username" type="email" autofocus>
					</div>
					<div class="form-group">
						<label for="password">Password</label>
						<a class="pull-right" href="@Url.RouteUrl("forgot_password")">Forgot password?</a>
						<input class="form-control" placeholder="Password" name="password" id="password" type="password" value="">
					</div>
					<div class="form-group form-check">
						<input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberLabel">
						<label for="rememberLabel">Remember Me</label>
					</div>
					<input type="submit" class="btn btn-primary btn-block" value="Login" />
				</form>
			</div>
		</div>

		@*<div class="mt-4 card">
			<div class="card-body bg-light text-center">
				New to Notes? <a href="#">Create an account.</a>
			</div>
		</div>*@
	</div>
</div>