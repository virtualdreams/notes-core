@using notes.Helper;

@{
	Layout = "_LayoutMinimal";
	ViewBag.Title = "Login - ";
}

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Please Sign In</h3>
			</div>
			<div class="panel-body">

				@if(Html.HasError("error")) {
					<div class="alert alert-danger">
						@Html.ErrorMessage("error")
					</div>
				}

				<form role="form" action="@Url.RouteUrl("login", new { ReturnUrl = Context.Request.Query["ReturnUrl"] })" method="post" enctype="multipart/form-data" id="login-form">
					<fieldset>
						<div class="form-group">
							<input class="form-control" placeholder="E-mail" name="username" type="email" autofocus>
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="Password" name="password" type="password" value="">
						</div>
						<div class="checkbox">
							<label>
								<input name="remember" type="checkbox" value="true">Remember Me
							</label>
						</div>
						<input type="submit" class="btn btn-lg btn-primary btn-block" value="Login" /> <a href="@Url.RouteUrl("forgot_password")">Forgot password?</a>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>