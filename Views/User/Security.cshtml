@using notes.Helper;

@{
	ViewBag.Title = "Change Password - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-key"></i> Change Password
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			<li><i class="fa fa-sliders"></i> <a href="@Url.Action("settings", "user")">Settings</a></li>
			<li><i class="fa fa-key"></i> Change Password</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
        <div class="row">
			<div class="col-lg-4">

				@if(Html.HasError("error")) {
					<div class="alert alert-danger">
						@Html.ErrorMessage("error")
					</div>
				}

				<form role="form" action="@Url.Action("security", "user")" method="post" enctype="multipart/form-data" id="security-form" >
					<div class="form-group">
						<label>Old Password</label>
						<input type="password" class="form-control" name="oldpassword" value="" />
					</div>
					<div class="form-group">
						<label>New Password</label>
						<input type="password" class="form-control" id="newpassword" name="newpassword" value="" />
					</div>
					<div class="form-group">
						<label>Confirm new password</label>
						<input type="password" class="form-control" name="confirmpassword" value="" />
					</div>
					<button type="submit" class="btn btn-primary">Save</button>
				</form>
			</div>
        </div>
	</div>
</div>