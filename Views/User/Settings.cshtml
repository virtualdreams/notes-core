@model notes.Models.UserSettingsEditContainer

@{
	ViewBag.Title = "Settings - ";
}

<div class="row">
	<div class="col-lg-12">
		<div class="page-header">
			<div class="btn-toolbar pull-right">
				<div class="btn-group">
					<button type="button" class="btn btn-primary" data-href="@Url.Action("security", "user")"><i class="fa fa-key"></i> Change Password</button>
     			</div>
   			</div>
            <h1><i class="fa fa-sliders"></i> Settings</h1>
		</div>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
            <li><i class="fa fa-sliders"></i> Settings</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
        <div class="row">
			<div class="col-md-4">
                <form role="form" action="@Url.Action("profile", "user")" method="post" enctype="multipart/form-data" id="profile-form" >
                    <div class="form-group">
                        <label>Display Name</label>
                        <input type="text" class="form-control" placeholder="Display Name" name="displayname" value="@Model.Profile.DisplayName" />
                    </div>
                    <button type="submit" class="btn btn-primary">Update profile</button>
                </form>
            </div>
        </div>
        <hr>
        <div class="row">
			<div class="col-md-4">
                <form role="form" action="@Url.Action("settings", "user")" method="post" enctype="multipart/form-data" id="settings-form" >
                    <div class="form-group">
                        <label>Items per page</label>
                        <input type="number" class="form-control" name="items" value="@Model.Settings.Items" />
                    </div>
                    <div class="form-group">
                        <label>Search language</label>
                        <select name="language" class="form-control">
                            <option value="en">English (default)</option>
                            <option value="de">German</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Update settings</button>
                </form>
            </div>
        </div>
	</div>
</div>

@section script {
<script>
    $('.form-control option[value="@Model.Settings.Language"]').attr("selected", "selected");
</script>
}