@model notes.Models.UserSettingsEditContainer

@{
	ViewBag.Title = "Settings - ";
}

<div class="row">
	<div class="col-lg-12">
		<div class="page-header">
			<div class="btn-toolbar pull-right">
				<div class="btn-group">
					<button type="button" class="btn btn-primary" data-href="@Url.Action("security", "user")"><i class="fa fa-fw fa-key"></i> Change Password</button>
     			</div>
   			</div>
            <h1><i class="fa fa-fw fa-sliders"></i> Settings</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
        <div class="row">
			<div class="col-lg-4">
                <form role="form" action="@Url.Action("profile", "user")" method="post" enctype="multipart/form-data" id="profile-form" >
                    <div class="form-group">
                        <label>Display Name</label>
                        <input type="text" class="form-control" placeholder="Display Name" name="displayname" value="@Model.Profile.DisplayName" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update profile</button>
                    </div>
                </form>
            </div>
        </div>
        <hr>
        <div class="row">
			<div class="col-lg-4">
                <form role="form" action="@Url.Action("settings", "user")" method="post" enctype="multipart/form-data" id="settings-form" >
                    <div class="form-group">
                        <label>Items per page</label>
                        <input type="number" class="form-control" name="items" value="@Model.Settings.Items" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update settings</button>
                    </div>
                </form>
            </div>
        </div>
	</div>
</div>