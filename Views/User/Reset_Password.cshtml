@model notes.Models.PasswdResetModel
@using notes.Extensions;

@{
	Layout = "_LayoutMinimal";
	ViewBag.Title = "Change your password - ";
}

<div class="row justify-content-center">
	<div class="col-md-4">
		<div class="mt-5 card">
			<div class="card-header">
				Change your password
			</div>
			<div class="card-body">

				@if(Html.HasError("error")) {
					<div class="alert alert-danger">
						@Html.ErrorMessage("error")
					</div>
				}

				<form action="@Url.RouteUrl("reset_password", new { id = Model.Token })" method="post" enctype="multipart/form-data" id="reset-form">
					<div class="form-group">
						<label for="newpassword">New Password</label>
						<input type="password" class="form-control" placeholder="New password" name="newpassword" id="newpassword" value="" validation-for="newpassword" />
					</div>
					<div class="form-group">
						<label for="confirmpassword">Confirm new password</label>
						<input type="password" class="form-control" placeholder="Confirm password" name="confirmpassword" id="confirmpassword" value="" validation-for="confirmpassword" />
					</div>
					<input type="submit" class="btn btn-primary btn-block" value="Change password" />
				</form>
			</div>
		</div>
	</div>
</div>