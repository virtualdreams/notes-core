@using notes.Helper;

@{
	Layout = "_LayoutMinimal";
	ViewBag.Title = "Forgot Password - ";
}

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Forgot Password</h3>
			</div>
			<div class="panel-body">

				@if(Html.HasError("error")) {
					<div class="alert alert-danger">
						@Html.ErrorMessage("error")
					</div>
				}

				<form role="form" action="@Url.RouteUrl("forgot_password")" method="post" enctype="multipart/form-data" id="forgot-form">
					<fieldset>
						<div class="form-group">
							Enter your email address and we will send you a link to reset your password.
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="E-mail" name="username" type="email" autofocus>
						</div>
						<input type="submit" class="btn btn-lg btn-primary btn-block" value="Send password reset email" />
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>