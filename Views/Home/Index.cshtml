@model notes.Models.NoteListContainer
@using notes.Helper

<div class="row">
	<div class="col-lg-12">
		<div class="page-header">
			<div class="btn-toolbar pull-right">
				<div class="btn-group">
					<button type="button" class="btn btn-primary" data-href="@Url.Action("create", "note")"><i class="fa fa-file"></i> Create</button>
     			</div>
   			</div>
   			<h1><i class="fa fa-file"></i> Notes</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th>Title</th>
						<th style="text-align: right;">Submitted</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var note in Model.Notes) {
					<tr>
						<td><a href="@Url.Action("view", "note", new { id = note.Id, slug = note.Title.ToSlug() })">@note.Title</a></td>
						<td><span class="pull-right text-muted small"><em>@note.Age</em></td>
					</tr>
					}
				</tbody>
			</table>
		</div>

		<nav>
			<ul class="pager">
				@if(Model.Offset.HasPrevious) {
				<li><a href="@Url.Action("index", "home", new { ofs = Model.Offset.PreviousOffset })">Newer</a></li>
				}
				@if(Model.Offset.HasNext) {
				<li><a href="@Url.Action("index", "home", new { ofs = Model.Offset.NextOffset })">Older</a></li>
				}
			</ul>
		</nav>

	</div>
</div>