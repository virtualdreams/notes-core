@model notes.Models.NoteListContainer
@using notes.Helper

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-fw fa-file"></i> Notes
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		@if(Model.Notes.Count() > 0) {
			@await Html.PartialAsync("_PartialNotes", Model.Notes)
		} else {
			@:There are no more notes at the moment.
		}
	</div>
	<div class="col-lg-12">
		<nav>
			<ul class="pager">
				@if(Model.Pager.HasNext) {
				<li><a href="@Url.Action("index", "home", new { after = Model.Pager.NextPage })" rel="nofollow next">Older</a></li>
				}
			</ul>
		</nav>
	</div>
</div>
