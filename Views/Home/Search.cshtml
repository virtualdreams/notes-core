@model notes.Models.NoteSearchContainer
@using notes.Helper

@{
	ViewBag.Title = "Search - ";
	ViewBag.Search = @Model.Term;
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-fw fa-search"></i> Search
			<small>for @Model.Term</small>
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		@if(Model.Notes.Count() > 0) {
			@await Html.PartialAsync("_PartialNotes", Model.Notes)
		} else {
			@:Your search returned no matches.
		}
	</div>
	<div class="col-lg-12">
		<nav>
			<ul class="pager">
				@if(Model.Pager.HasNext) {
				<li><a href="@Url.RouteUrl("search", new { q = Model.Term, after = Model.Pager.NextPage })" rel="nofollow next">Older</a></li>
				}
			</ul>
		</nav>
	</div>
</div>