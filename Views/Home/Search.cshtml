@model notes.Models.NoteSearchContainer
@using notes.Helper

@section title
{
	Search - 
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-search"></i> Search
			<small>for @Model.Term, @Model.Offset.Items hits</small>
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		
		<div class="list-group">
			@foreach(var note in Model.Notes) {
			<a href="@Url.Action("view", "note", new { id = note.Id, slug = note.Title.ToSlug() })" class="list-group-item">
				<i class="fa fa-comment fa-file"></i> @note.Title
				<span class="pull-right text-muted small"><em>@note.Age</em>
				</span>
			</a>
			}
		</div>

		<nav>
			<ul class="pager">
				@if(Model.Offset.HasPrevious) {
				<li><a href="@Url.Action("search", "home", new { q = Model.Term, ofs = Model.Offset.PreviousOffset })">Newer</a></li>
				}
				@if(Model.Offset.HasNext) {
				<li><a href="@Url.Action("search", "home", new { q = Model.Term, ofs = Model.Offset.NextOffset })">Older</a></li>
				}
			</ul>
		</nav>
	
	</div>
</div>