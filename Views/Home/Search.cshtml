@model notes.Models.NoteSearchContainer
@using notes.Helper

@{
	ViewBag.Title = "Search - ";
	ViewBag.Search = @Model.Term;
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-search"></i> Search
			<small>for @Model.Term</small>
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			<li><i class="fa fa-search"></i> Search</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		
		@await Component.InvokeAsync("Notes", new { model = @Model.Notes })

		<nav>
			<ul class="pager">
				@if(Model.Pager.HasNext) {
				<li><a href="@Url.Action("search", "home", new { q = Model.Term, after = Model.Pager.NextPage })" rel="nofollow next">Older</a></li>
				}
			</ul>
		</nav>
	
	</div>
</div>