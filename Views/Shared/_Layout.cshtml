@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Options
@using notes
@inject IAuthorizationService AuthorizationService
@inject IOptions<Settings> Settings

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">

		<title>@ViewBag.Title@Settings.Value.SiteName</title>
		
		<environment names="Development"></environment>
		<environment names="Staging,Production"></environment>
		
		<link href="/lib/bootstrap.min.css" rel="stylesheet">
		<link href="/lib/metisMenu.min.css" rel="stylesheet">
		<link href="/lib/font-awesome.min.css" rel="stylesheet">
		<link href="/lib/highlight.css" rel="stylesheet">
		<link href="/css/sb-admin-2.min.css" rel="stylesheet">
		<link href="/css/notes.min.css" rel="stylesheet">

		<link rel="shortcut icon" href="/favicon.ico?v=3">
		<link rel="icon" sizes="16x16 32x32 64x64" href="/favicon.ico?v=3">
		<link rel="icon" type="image/png" sizes="196x196" href="/favicon-192.png?v=3">
		<link rel="icon" type="image/png" sizes="160x160" href="/favicon-160.png?v=3">
		<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96.png?v=3">
		<link rel="icon" type="image/png" sizes="64x64" href="/favicon-64.png?v=3">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png?v=3">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png?v=3">
		<link rel="apple-touch-icon" href="/favicon-57.png?v=3">
		<link rel="apple-touch-icon" sizes="114x114" href="/favicon-114.png?v=3">
		<link rel="apple-touch-icon" sizes="72x72" href="/favicon-72.png?v=3">
		<link rel="apple-touch-icon" sizes="144x144" href="/favicon-144.png?v=3">
		<link rel="apple-touch-icon" sizes="60x60" href="/favicon-60.png?v=3">
		<link rel="apple-touch-icon" sizes="120x120" href="/favicon-120.png?v=3">
		<link rel="apple-touch-icon" sizes="76x76" href="/favicon-76.png?v=3">
		<link rel="apple-touch-icon" sizes="152x152" href="/favicon-152.png?v=3">
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon-180.png?v=3">
		<meta name="msapplication-TileColor" content="#FFFFFF">
		<meta name="msapplication-TileImage" content="/favicon-144.png?v=3">
		<meta name="msapplication-config" content="/browserconfig.xml">
	</head>
	<body>
		<div id="wrapper">
			<!-- Navigation -->
			<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">@Settings.Value.SiteName</a>
				</div>
				<!-- Top Menu Items -->
				<ul class="nav navbar-top-links navbar-right">
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<i class="fa fa-user"></i> @await Component.InvokeAsync("DisplayName") <b class="caret"></b>
						</a>
						<ul class="dropdown-menu dropdown-user">
							@if(await AuthorizationService.AuthorizeAsync(User, "AdministratorOnly")) {
							<li><a href="@Url.Action("index", "account", new { area = "admin" })"><i class="fa fa-fw fa-users"></i> Accounts</a></li>
							<li class="divider"></li>
							}
							<li><a href="@Url.Action("settings", "user", new { area = String.Empty })"><i class="fa fa-fw fa-sliders"></i> Settings</a></li>
							<li class="divider"></li>
							<li><a href="@Url.RouteUrl("logout")"><i class="fa fa-fw fa-power-off"></i> Logout</a></li>
						</ul>
					</li>
				</ul>
				
				<div class="navbar-default sidebar" role="navigation">
					<div class="sidebar-nav navbar-collapse">
						<ul class="nav" id="side-menu">
							<li class="sidebar-search">
								<form role="form" action="@Url.RouteUrl("search")" method="get" id="search-form" >
									<div class="input-group custom-search-form">
										<input type="text" name="q" class="form-control" placeholder="Search..." value="@ViewBag.Search" />
										<span class="input-group-btn">
											<button class="btn btn-default" type="submit">
												<i class="fa fa-search"></i>
											</button>
										</span>
									</div>
								</form>
							</li>
							<li><a href="/"><i class="fa fa-fw fa-home"></i> Notes</a></li>
							<li>
								<a href="#"><i class="fa fa-fw fa-book"></i> Notebooks<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									@await Component.InvokeAsync("Notebooks")
								</ul>
							</li>
							<li>
								<a href="#"><i class="fa fa-fw fa-tags"></i> Tags<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									@await Component.InvokeAsync("Tags")
								</ul>
							</li>
							<li><a href="@Url.RouteUrl("trash")"><i class="fa fa-fw fa-trash-o"></i> Trash</a></li>
						</ul>
					</div>
				</div>
			</nav>

			<div id="page-wrapper">
				<div class="container-fluid">
					@RenderBody()
				</div>
			</div>
		</div>

		<environment names="Development">
			<script src="/lib/jquery.min.js"></script>
			<script src="/lib/jquery-ui.min.js"></script>
			<script src="/lib/jquery.validate.min.js"></script>
			<script src="/lib/bootstrap.min.js"></script>
			<script src="/lib/metisMenu.min.js"></script>
			<script src="/assets/js/sb-admin-2.js"></script>
			<script src="/lib/highlight.pack.js"></script>
			<script src="/lib/taboverride.min.js"></script>
			<script src="/assets/js/notes.js"></script>
			<script>hljs.configure({languages: []}); hljs.initHighlightingOnLoad();</script>
			<script>tabOverride.set(document.getElementsByTagName('textarea'));</script>
		</environment>
		<environment names="Staging,Production">
			<script src="/lib/jquery.min.js"></script>
			<script src="/lib/jquery-ui.min.js"></script>
			<script src="/lib/jquery.validate.min.js"></script>
			<script src="/lib/bootstrap.min.js"></script>
			<script src="/lib/metisMenu.min.js"></script>
			<script src="/js/sb-admin-2.min.js"></script>
			<script src="/lib/highlight.pack.js"></script>
			<script src="/lib/taboverride.min.js"></script>
			<script src="/js/notes.min.js"></script>
			<script>hljs.configure({languages: []}); hljs.initHighlightingOnLoad();</script>
			<script>tabOverride.set(document.getElementsByTagName('textarea'));</script>
		</environment>

		@RenderSection("script", required: false)
	</body>
</html>
