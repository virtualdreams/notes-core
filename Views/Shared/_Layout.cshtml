@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Options
@using notes
@inject IAuthorizationService AuthorizationService
@inject IOptions<Settings> Settings

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">

		<title>@ViewBag.Title@Settings.Value.SiteName</title>
		
		@await Html.PartialAsync("_StylesPartial")

		@await Html.PartialAsync("_IconPartial")
	</head>
	<body>
		<div id="wrapper">
			<!-- Navigation -->
			<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">@Settings.Value.SiteName</a>
				</div>
				<!-- Top Menu Items -->
				<ul class="nav navbar-top-links navbar-right">
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<i class="fa fa-user"></i> @await Component.InvokeAsync("DisplayName") <b class="caret"></b>
						</a>
						<ul class="dropdown-menu dropdown-user">
							@if(await AuthorizationService.AuthorizeAsync(User, "AdministratorOnly")) {
							<li><a href="@Url.Action("index", "account", new { area = "admin" })"><i class="fa fa-fw fa-users"></i> Accounts</a></li>
							<li class="divider"></li>
							}
							<li><a href="@Url.Action("settings", "user", new { area = String.Empty })"><i class="fa fa-fw fa-sliders"></i> Settings</a></li>
							<li class="divider"></li>
							<li><a href="@Url.RouteUrl("logout")"><i class="fa fa-fw fa-power-off"></i> Logout</a></li>
						</ul>
					</li>
				</ul>
				
				<div class="navbar-default sidebar" role="navigation">
					<div class="sidebar-nav navbar-collapse">
						<ul class="nav" id="side-menu">
							<li class="sidebar-search">
								<form role="form" action="@Url.RouteUrl("search")" method="get" id="search-form" >
									<div class="input-group custom-search-form">
										<input type="text" name="q" class="form-control" placeholder="Search..." value="@ViewBag.Search" />
										<span class="input-group-btn">
											<button class="btn btn-default" type="submit">
												<i class="fa fa-search"></i>
											</button>
										</span>
									</div>
								</form>
							</li>
							<li><a href="/"><i class="fa fa-fw fa-home"></i> Notes</a></li>
							<li>
								<a href="#"><i class="fa fa-fw fa-book"></i> Notebooks<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									@await Component.InvokeAsync("Notebooks")
								</ul>
							</li>
							<li>
								<a href="#"><i class="fa fa-fw fa-tags"></i> Tags<span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									@await Component.InvokeAsync("Tags")
								</ul>
							</li>
							<li><a href="@Url.RouteUrl("trash")"><i class="fa fa-fw fa-trash-o"></i> Trash</a></li>
						</ul>
					</div>
				</div>
			</nav>

			<div id="page-wrapper">
				<div class="container-fluid">
					@RenderBody()
				</div>
			</div>
		</div>

		@await Html.PartialAsync("_ScriptsPartial")

		@RenderSection("script", required: false)
	</body>
</html>
