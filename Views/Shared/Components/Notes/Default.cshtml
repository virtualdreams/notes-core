@model IEnumerable<notes.Models.NoteModel>
@using notes.Helper

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th style="text-align: right; width: 150px;"><i class="fa fa-clock-o"></i> Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var note in Model) {
            <tr>
                <td>
                    <a href="@Url.Action("view", "note", new { id = note.Id, slug = note.Title.ToSlug() })">@note.Title</a>
                </td>
                <td><span class="pull-right text-muted small"><em>@note.Age</em></td>
            </tr>
            }
        </tbody>
    </table>
</div>