@model postit.Models.PostitEditContainer

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Edit note
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			@if(!String.IsNullOrEmpty(@Model.Postit.Notebook)) {
			<li><i class="fa fa-book"></i> <a href="@Url.Action("view", "notebook", new { id = Model.Postit.Notebook })">@Model.Postit.Notebook</a></li>
			}
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<form role="form" action="@Url.Action("edit", "postit")" method="post", enctype="multipart/form-data" id="postit-form" >
			<div class="form-group">
				<label>Title</label>
				<input class="form-control" name="title" value="@Model.Postit.Title" />
			</div>
			<div class="form-group">
				<label>Content</label>
				<textarea class="form-control" name="content" rows="20">@Model.Postit.Content</textarea>
			</div>
			<input type="hidden" name="id" value="@Model.Postit.Id" />
			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>