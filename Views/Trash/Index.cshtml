@model notes.Models.NoteListContainer
@using notes.Helper

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-trash-o"></i> Trash
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<form role="form" action="@Url.Action("delete", "trash")" method="post", enctype="multipart/form-data" id="trash-form" >
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th style="width: 20px;"><input type="checkbox" value="" /></th>
							<th>Title</th>
							<th style="text-align: right;">Age</th>
						</tr>
					</thead>
					<tbody>
						@foreach(var note in Model.Notes) {
						<tr>
							<td><input type="checkbox" name="id" value="@note.Id" /></td>
							<td><a href="@Url.Action("view", "note", new { id = note.Id, slug = note.Title.ToSlug() })">@note.Title</a></td>
							<td><span class="pull-right text-muted small"><em>@note.Age</em></td>
						</tr>
						}
					</tbody>
				</table>
			</div>
			<button type="submit" class="btn btn-primary">Delete</button>
		</form>
				
		<nav>
			<ul class="pager">
				@if(Model.Offset.HasPrevious) {
				<li><a href="@Url.Action("index", "trash", new { ofs = Model.Offset.PreviousOffset })">Newer</a></li>
				}
				@if(Model.Offset.HasNext) {
				<li><a href="@Url.Action("index", "trash", new { ofs = Model.Offset.NextOffset })">Older</a></li>
				}
			</ul>
		</nav>
	</div>
</div>
