@model notes.Models.UserEditContainer
@using MongoDB.Bson;

@{
	ViewBag.Title = $"{(Model.User.Id != ObjectId.Empty ? Model.User.Username : "New user")} - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			@if(Model.User.Id != ObjectId.Empty) {
			@:Edit user
			} else {
			@:Create user
			}
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			<li><i class="fa fa-users"></i> <a href="@Url.Action("index", "account")">Accounts</a></li>
			<li><i class="fa fa-pencil"></i> Edit</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-4">
		<form role="form" action="@Url.Action("edit", "account")" method="post" enctype="multipart/form-data" id="account-form" >
			<div class="form-group">
				<label>Username</label>
				<input type="email" class="form-control" name="username" value="@Model.User.Username" />
			</div>
			<div class="form-group">
				<label>Password</label>
				<input type="password" class="form-control" name="password" value="" />
			</div>
			<input type="hidden" name="id" value="@Model.User.Id" />
			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>