@{
	Layout = "_LayoutMinimal";
	ViewBag.Title = "Forgot Password - ";
}

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Forgot Password</h3>
			</div>
			<div class="panel-body">
				<form role="form" action="@Url.Action("forgot_password", "account", new { ReturnUrl = Context.Request.Query["ReturnUrl"] })" method="post" enctype="multipart/form-data">
					<fieldset>
						<div class="form-group">
							<input class="form-control" placeholder="E-mail" name="username" type="email" autofocus>
						</div>
						<input type="submit" class="btn btn-lg btn-primary btn-block" value="Send password reset email" />
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>