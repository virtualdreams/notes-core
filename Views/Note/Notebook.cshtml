@model notes.Models.NoteNotebookContainer
@using notes.Helper

@{
	ViewBag.Title = $"{Model.Notebook} - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-fw fa-book"></i> @Model.Notebook
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		@await Html.PartialAsync("_PartialNotes", Model.Notes)
	</div>
	<div class="col-lg-12">
		<nav>
			<ul class="pager">
				@if(Model.Pager.HasNext) {
				<li><a href="@Url.RouteUrl("notebook", new { id = Model.Notebook, after = Model.Pager.NextPage })" rel="nofollow next">Older</a></li>
				}
			</ul>
		</nav>
	</div>
</div>