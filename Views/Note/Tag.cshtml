@model notes.Models.NoteTagContainer
@using notes.Helper

@{
	ViewBag.Title = $"{Model.Tag} - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-fw fa-tag"></i> @Model.Tag
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		@if(Model.Notes.Count() > 0) {
			@await Html.PartialAsync("_PartialNotes", Model.Notes)
		} else {
			@:There are no more notes at the moment.
		}
	</div>
	<div class="col-lg-12">
		<nav>
			<ul class="pager">
				@if(Model.Pager.HasNext) {
				<li><a href="@Url.RouteUrl("tag", new { id = Model.Tag, after = Model.Pager.NextPage })" rel="nofollow next">Older</a></li>
				}
			</ul>
		</nav>
	</div>
</div>