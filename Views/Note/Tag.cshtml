@model notes.Models.NoteTagContainer
@using notes.Helper

@{
	ViewBag.Title = $"{Model.Tag} - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-tag"></i> @Model.Tag
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			<li><i class="fa fa-tag"></i> @Model.Tag</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		
		@await Html.PartialAsync("_PartialNotes", Model.Notes)

		<nav>
			<ul class="pager">
				@if(Model.Pager.HasNext) {
				<li><a href="@Url.RouteUrl("tag", new { id = Model.Tag, after = Model.Pager.NextPage })" rel="nofollow next">Older</a></li>
				}
			</ul>
		</nav>
			
	</div>
</div>