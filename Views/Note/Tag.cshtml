@model notes.Models.NoteTagContainer
@using notes.Helper

@{
	ViewBag.Title = $"{Model.Tag} - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-tag"></i> @Model.Tag
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		
		@await Component.InvokeAsync("Notes", new { model = @Model.Notes })

		<nav>
			<ul class="pager">
				@if(Model.Offset.HasPrevious) {
				<li><a href="@Url.Action("tag", "note", new { id = Model.Tag, ofs = Model.Offset.PreviousOffset })">Newer</a></li>
				}
				@if(Model.Offset.HasNext) {
				<li><a href="@Url.Action("tag", "note", new { id = Model.Tag, ofs = Model.Offset.NextOffset })">Older</a></li>
				}
			</ul>
		</nav>
			
	</div>
</div>