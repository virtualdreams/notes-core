@model notes.Models.NoteEditContainer

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Edit note
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			@if(!String.IsNullOrEmpty(@Model.Note.Notebook)) {
			<li><i class="fa fa-book"></i> <a href="@Url.Action("view", "notebook", new { id = Model.Note.Notebook })">@Model.Note.Notebook</a></li>
			}
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<form role="form" action="@Url.Action("edit", "note")" method="post", enctype="multipart/form-data" id="note-form" >
			<div class="form-group">
				<label>Title</label>
				<input class="form-control" name="title" value="@Model.Note.Title" />
			</div>
			<div class="form-group">
				<label>Content</label>
				<textarea class="form-control" name="content" rows="20">@Model.Note.Content</textarea>
			</div>
			<input type="hidden" name="id" value="@Model.Note.Id" />
			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>