@model notes.Models.NoteEditContainer
@using notes.Helper;
@using MongoDB.Bson;

@{
	ViewBag.Title = $"{(Model.Note.Id != ObjectId.Empty ? Model.Note.Title : "Create new note")} - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			@if(Model.Note.Id != ObjectId.Empty) {
			@:Edit note
			} else {
			@:Create new note
			}
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			@if(Model.Note.Id != ObjectId.Empty) {
			<li><i class="fa fa-file"></i> <a href="@Url.RouteUrl("view", new { id = Model.Note.Title.ToSlug(Model.Note.Id) })">@Model.Note.Title</a></li>
			<li><i class="fa fa-pencil"></i> Edit</li>
			} else {
			<li><i class="fa fa-pencil"></i> Create</li>
			}
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<form role="form" action="@Url.Action("edit", "note")" method="post" enctype="multipart/form-data" id="note-form">
			<div class="row">
				<div class="col-lg-12" id="result">
					@if(Html.HasError("error")) {
						<div class="alert alert-danger">
							@Html.ErrorMessage("error")
						</div>
					}
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<label>Title</label>
						<input class="form-control" name="title" placeholder="Title" value="@Model.Note.Title" />
					</div>
					<div class="form-group">
						<label>Content</label>
						<div class="editor-toolbar">
							<button type="button" class="btn btn-default" id="preview"><i class="fa fa-eye"></i> Preview</button>
							<button type="button" class="btn btn-default" id="help"><i class="fa fa-question-circle"></i></button>
						</div>
						<div class="editor-help" id="editor-help">
							@await Html.PartialAsync("_PartialHelp")
						</div>
						<div class="editor-container">
							<div class="editor-source" id="editor-source">
								<textarea class="form-control" name="content">@Html.Raw(@Model.Note.Content)</textarea>
							</div>
							<div class="editor-preview" id="editor-preview"></div>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6">
					<div class="form-group">
						<label>Notebook</label>
						<input class="form-control" name="notebook" id="notebook" placeholder="Notebook" value="@Model.Note.Notebook" />
					</div>
				</div>
				<div class="col-lg-6">
					<div class="form-group">
						<label>Tags</label>
						<input class="form-control" name="tags" id="tags" placeholder="Separate with spaces" value="@Model.Note.Tags" />
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<input type="hidden" name="id" id="id" value="@Model.Note.Id" />
						<button type="submit" class="btn btn-primary">Save</button>
						<button type="button" class="btn btn-primary" id="saveContinue">Save and continue</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>