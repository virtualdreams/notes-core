@model notes.Models.NoteEditContainer
@using notes.Helper;
@using MongoDB.Bson;

@{
	ViewBag.Title = $"{(Model.Note.Id != ObjectId.Empty ? Model.Note.Title : "New note")} - ";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			@if(Model.Note.Id != ObjectId.Empty) {
			@:Edit note
			} else {
			@:Create note
			}
		</h1>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i> <a href="@Url.Action("index", "home")">Home</a></li>
			@if(Model.Note.Id != ObjectId.Empty) {
			<li><i class="fa fa-file"></i> <a href="@Url.Action("view", "note", new { id = Model.Note.Id, slug = Model.Note.Title.ToSlug() })">@Model.Note.Title</a></li>
			<li><i class="fa fa-pencil"></i> Edit</li>
			} else {
			<li><i class="fa fa-pencil"></i> Create</li>
			}
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<form role="form" action="@Url.Action("edit", "note")" method="post" enctype="multipart/form-data" id="note-form">

			<!-- editor pane -->
			<div id="editorPane">

				<div class="row">
					<div class="col-lg-12">
						<div class="form-group">
							<label>Title</label>
							<input class="form-control" name="title" placeholder="Title" value="@Model.Note.Title" />
						</div>
						<div class="form-group">
							<label>Content</label>
							<textarea class="form-control" name="content" rows="20">@Html.Raw(@Model.Note.Content)</textarea>
							<small><a href="@Url.Action("help", "home")" target="_blank"><i class="fa fa-code"></i> Styling with Markdown</a></small>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<div class="form-group">
							<label>Notebook</label>
							<input class="form-control" name="notebook" placeholder="Notebook" value="@Model.Note.Notebook" />
						</div>
					</div>
					<div class="col-lg-6">
						<div class="form-group">
							<label>Tags</label>
							<input class="form-control" name="tags" placeholder="Separate with spaces" value="@Model.Note.Tags" />
						</div>
					</div>
				</div>

			</div>
			
			<!-- preview pane -->
			<div id="previewPane" style="display: none"></div>

			<div class="row">
				<div class="col-lg-12" id="result"></div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<input type="hidden" name="id" id="id" value="@Model.Note.Id" />
						<button type="submit" class="btn btn-primary">Save</button>
						<button type="button" class="btn btn-primary" id="saveContinue">Save and continue</button>
						<button type="button" class="btn btn-primary" id="preview">Preview</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>