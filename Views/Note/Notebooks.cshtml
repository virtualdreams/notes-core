@model IEnumerable<DistinctAndCountModel>
@using notes.Models

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-fw fa-book"></i> All notebooks
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
	@foreach(var notebook in Model) {
		<a class="cloud" href="@Url.RouteUrl("notebook", new { id = notebook.Id })"><i class="fa fa-fw fa-book"></i> @notebook.Id <span class="small text-muted">&times; @notebook.Count</span></a>
	}
	</div>
</div>