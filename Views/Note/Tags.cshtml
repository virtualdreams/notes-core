@model IEnumerable<string>

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-fw fa-tag"></i> All tags
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
	@foreach(var tag in Model) {
		<a class="cloud" href="@Url.RouteUrl("tag", new { id = tag })"><i class="fa fa-fw fa-tag"></i> @tag</a>
	}
	</div>
</div>