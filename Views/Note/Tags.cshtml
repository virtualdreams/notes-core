@model IEnumerable<DistinctAndCountModel>
@using notes.Models

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			<i class="fa fa-fw fa-tags"></i> All tags
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
	@foreach(var tag in Model) {
		<a class="cloud" href="@Url.RouteUrl("tag", new { id = tag.Id })"><i class="fa fa-fw fa-tag"></i> @tag.Id <span class="small text-muted">&times; @tag.Count</span></a>
	}
	</div>
</div>