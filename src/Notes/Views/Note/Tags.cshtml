@model IEnumerable<DistinctAndCountModel>
@using Notes.Models

<div class="row">
	<div class="col-lg-12">
		<div class="pb-2 mt-4 mb-2 border-bottom">
			<h1>
				<i class="fa fa-fw fa-tags"></i> All tags
			</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
	@foreach(var tag in Model) {
		<a class="cloud" href="@Url.RouteUrl("tag", new { id = tag.Name })"><i class="fa fa-fw fa-tag"></i> @tag.Name <span class="small text-muted">&times; @tag.Count</span></a>
	}
	</div>
</div>