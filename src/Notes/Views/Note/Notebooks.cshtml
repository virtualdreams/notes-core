@model IEnumerable<DistinctAndCountModel>
@using Notes.Models

<div class="row">
	<div class="col-lg-12">
		<div class="pb-2 mt-4 mb-2 border-bottom">
			<h1>
				<i class="fa-solid fa-fw fa-book"></i> All notebooks
			</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
	@foreach(var notebook in Model) {
		<a class="cloud" href="@Url.RouteUrl("notebook", new { id = notebook.Name })"><i class="fa-solid fa-fw fa-book"></i> @notebook.Name <span class="small text-muted">&times; @notebook.Count</span></a>
	}
	</div>
</div>