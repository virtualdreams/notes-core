@model Notes.Models.NoteEditContainer
@using Notes.Extensions;

@{
	Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
	<h1 class="h2">
		Create new note
	</h1>
</div>

<div class="edit">
	<div class="row mb-3">
		<div class="col-lg-12 ">
			<div class="form-group">
				<input class="form-control shadow-none border-0" style="font-weight: bold;" name="title" id="title" placeholder="Title" value="@Model.Note.Title" validation-for="title" />
			</div>
			<div class="form-group">
				<textarea class="form-control shadow-none border-0" style="min-height: 400px;" name="content" id="content" placeholder="Start writing your note" validation-for="content">@Model.Note.Content</textarea>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group mb-3">
				<div class="input-group">
					<span class="input-group-text border-0 bg-white text-secondary"><i class="fa-solid fa-fw fa-book"></i></span>
					<input class="form-control border-0 shadow-none" type="text" name="notebook" id="notebook" placeholder="Notebook" value="@Model.Note.Notebook" validation-for="notebook" />
				</div>
			</div>
		</div>
		<div class="col-lg-6">
			<div class="form-group mb-3">
				<div class="input-group">
					<span class="input-group-text border-0 bg-white text-secondary"><i class="fa-solid fa-fw fa-tags"></i></span>
					<input class="form-control border-0 shadow-none" type="text" name="tags" id="tags" placeholder="Add tags, separate with spaces" value="@Model.Note.TagsString" validation-for="tags" />
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="form-group">
				<input type="hidden" name="id" id="id" value="@Model.Note.Id" />
				<button class="btn btn-primary" type="submit">Save</button>
				<button class="btn btn-primary" type="button" id="saveContinue">Save and continue</button>
			</div>
		</div>
	</div>
</div>