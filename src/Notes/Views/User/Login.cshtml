@using Notes.Extensions;

@{
	Layout = "_LayoutMinimal";
	ViewBag.Title = "Sign in to ";
}

<div class="row justify-content-center">
	<div class="col-md-4">
		<div class="mt-5 card">
			<div class="card-header">
				Please Sign In
			</div>
			<div class="card-body">

				@if(Html.HasError("error")) {
					<div class="alert alert-danger">
						@Html.ErrorMessage("error")
					</div>
				}

				<form asp-route="login" method="post" enctype="multipart/form-data" id="login-form">
					<div class="mb-3">
						<label class="form-label" for="username">E-mail address</label>
						<input class="form-control" type="email" name="username" id="username" placeholder="E-mail" autofocus validation-for="username">
					</div>
					<div class="mb-3">
						<label class="form-label" for="password">Password</label>
						<a class="float-end" asp-route="forgot_password">Forgot password?</a>
						<input class="form-control" type="password" name="password" id="password" placeholder="Password" validation-for="password">
					</div>
					<div class="mb-3 form-check">
						<input class="form-check-input" type="checkbox" name="remember" id="rememberLabel" value="true">
						<label class="form-check-label" for="rememberLabel">Remember Me</label>
					</div>
					<input class="btn btn-primary" type="submit" value="Login">
				</form>
			</div>
		</div>

		@* <div class="mt-4 card">
			<div class="card-body bg-light text-center">
				New to Notes? <a href="#">Create an account.</a>
			</div>
		</div> *@
	</div>
</div>